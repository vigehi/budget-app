
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="myclass">
  <%= link_to "Back", users_path, class:"back-link" %>
  <p>SIGNUP</p>
  <div >
  <%= f.submit "Sign up", class: "c-actions"  %>
  </div>
</div>

<div class="form-field">
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name",  placeholder: 'Name', class:"field-login" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder: 'Email', class:"field-login" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class:"field-login" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder: 'Confrim Password', class:"field-login" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
